<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" >

        <View
            android:id="@+id/board"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            app:layout_constraintBottom_toTopOf="@id/btnUp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black"/>
        <Button
            android:id="@+id/btnUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnUp"
            android:text="@string/blank_text"
            app:constraint_layoutTop_toBottomOf="@+id/board"
            app:constraint_layoutBottom_toTopOf="@+id/btnDown"
            app:constraint_layoutLeft_toLeftOf="parent"
            app:constraint_layoutRight_toLeftOf="parent"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btnLeft"

                app:constraint_layoutTop_toBottomOf="@+id/btnUp"
                app:constraint_layoutBottom_toBottomOf="parent"
                app:constraint_layoutLeft_toLeftOf="parent"
                app:constraint_layoutRight_toLeftOf="@+id/btnDown"
                android:text="@string/blank_text"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/btnDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btnDown"
                app:constraint_layoutTop_toBottomOf="@+id/btnUp"
                app:constraint_layoutBottom_toBottomOf="parent"
                app:constraint_layoutLeft_toRightOf="@+id/btnRight"
                app:constraint_layoutRight_toLeftOf="@+id/btnLeft"
                android:text="@string/blank_text"
                tools:ignore="MissingConstraints" />
            <Button
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btnRight"
                app:constraint_layoutTop_toBottomOf="@+id/btnUp"
                app:constraint_layoutBottom_toBottomOf="parent"
                app:constraint_layoutLeft_toRightOf="@+id/btnDown"
                app:constraint_layoutRight_toRightOf="parent"
                android:text="@string/blank_text"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <Button
            android:id="@+id/btnStop"
            android:background="@drawable/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_layoutTop_toBottomOf="@+id/btnDown"
            app:constraint_layoutBottom_toBottomOf="parent"
            app:constraint_layoutLeft_toLeftOf="parent"
            app:constraint_layoutRight_toRightOf="parent"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="@string/blank_text" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>